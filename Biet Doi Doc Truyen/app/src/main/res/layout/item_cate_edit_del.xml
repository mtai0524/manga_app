<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/layout_item_edit"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <androidx.cardview.widget.CardView
        android:id="@+id/cv_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <EditText
                android:padding="10dp"
                android:background="@android:color/transparent"
                android:id="@+id/tv_name_cate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="name"></EditText>

            <Button
                android:textAllCaps="false"
                android:textColor="#F6EBEB"
                android:layout_marginRight="10dp"
                android:background="@drawable/btn_bg_edit"
                android:id="@+id/btn_edit_cate"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="edit"></Button>

            <Button
                android:textAllCaps="false"
                android:background="@drawable/btn_bg_del"
                android:id="@+id/btn_del_cate"
                android:textColor="#F6EBEB"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="delete"></Button>
        </LinearLayout>


    </androidx.cardview.widget.CardView>
</LinearLayout>