<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="10dp"
    android:layout_margin="20dp"
    app:cardCornerRadius="10dp"
    android:elevation="20dp"
    app:cardBackgroundColor="@color/color_button_text"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<RelativeLayout
    android:layout_margin="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_avatar_user"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_gravity="center_horizontal"
        android:layout_centerVertical="true"
        app:cardCornerRadius="45dp"
        app:cardElevation="3dp">

        <ImageView
            android:id="@+id/img_avatar_user"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:src="@drawable/manga"></ImageView>

    </androidx.cardview.widget.CardView>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="5dp"

        android:layout_toRightOf="@+id/cv_avatar_user"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_name_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="name"></TextView>

        <TextView
            android:id="@+id/tv_role_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_name_user"
            android:layout_marginLeft="5dp"
            android:text="role"></TextView>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_edit_user"
                android:textColor="#F6EBEB"

                android:layout_marginRight="10dp"
                android:background="@drawable/btn_bg_edit"
                android:textSize="12dp"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:textAllCaps="false"
                android:text="admin">
            </Button>
            <Button
                android:id="@+id/btn_role_user"

                android:textColor="#F6EBEB"

                android:background="@drawable/btn_bg_add"
                android:layout_marginRight="10dp"
                android:textSize="12dp"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:textAllCaps="false"
                android:text="user">
            </Button>
            <Button
                android:id="@+id/btn_delete_user"
                android:textColor="#F6EBEB"
                android:layout_marginRight="10dp"
                android:background="@drawable/btn_bg_del"
                android:textAllCaps="false"
                android:textSize="12dp"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:text="delete">
            </Button>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>


</androidx.cardview.widget.CardView>