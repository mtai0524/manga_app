<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/layout_container_btnChap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:textAllCaps="false"
                android:padding="10dp"
                android:textColor="@color/color_button_text"
                android:background="@drawable/btn_bg_add"
                android:id="@+id/btn_pre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="Chap trước">
            </Button>

            <Button
                android:textAllCaps="false"
                android:padding="10dp"
                android:textColor="@color/color_button_text"
                android:background="@drawable/btn_bg_add"
                android:id="@+id/btn_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="Chap sau">
            </Button>

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_below="@+id/layout_container_btnChap"
            android:id="@+id/rcv_manga_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".activity.MangaContentActivity">
        </androidx.recyclerview.widget.RecyclerView>
    </RelativeLayout>

</androidx.core.widget.NestedScrollView>